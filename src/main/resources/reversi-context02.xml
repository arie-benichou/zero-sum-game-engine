<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--*********************************************************************************** -->

	<bean id="nullSide"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.side.Side"
		factory-method="from">
	</bean>

	<bean id="side"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.side.Side"
		factory-method="from">
		<constructor-arg value="1" />
	</bean>

	<bean id="oppositeSide"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.side.Side"
		factory-method="from">
		<constructor-arg value="-1" />
	</bean>

	<!--*********************************************************************************** -->

	<bean id="nullPiece"
		class="fr.designpattern.zerosumgames.concretisations.reversi.context.pieces.ReversiNullPiece"
		factory-method="from">
	</bean>

	<bean id="pawnPiece"
		class="fr.designpattern.zerosumgames.concretisations.reversi.context.pieces.ReversiPawn"
		factory-method="from">
	</bean>

	<!--*********************************************************************************** -->

	<bean id="nullPieceType"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.type.PieceType"
		factory-method="from">
		<constructor-arg ref="nullPiece" />
	</bean>

	<bean id="pawnPieceType"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.type.PieceType"
		factory-method="from">
		<constructor-arg ref="pawnPiece" />
	</bean>

	<!--*********************************************************************************** -->

	<bean id="reversiNullPiece"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.Piece"
		factory-method="from">
		<constructor-arg ref="nullSide" />
		<constructor-arg ref="nullPieceType" />
	</bean>

	<bean id="reversiBlackPiece"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.Piece"
		factory-method="from">
		<constructor-arg ref="side" />
		<constructor-arg ref="pawnPieceType" />
	</bean>

	<bean id="reversiWhitePiece"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.Piece"
		factory-method="from">
		<constructor-arg ref="oppositeSide" />
		<constructor-arg ref="pawnPieceType" />
	</bean>

	<bean id="reversiPotentialPiece"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.piece.Piece"
		factory-method="from">
		<constructor-arg ref="nullSide" />
		<constructor-arg ref="pawnPieceType" />
	</bean>

	<!--*********************************************************************************** -->

	<bean id="symbols" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key-ref="reversiNullPiece" value="   " />
				<entry key-ref="reversiBlackPiece" value=" x " />
				<entry key-ref="reversiWhitePiece" value=" o " />
				<entry key-ref="reversiPotentialPiece" value=" * " />
			</map>
		</constructor-arg>
	</bean>

	<!--*********************************************************************************** -->

	<bean id="boardSetup"
		class="fr.designpattern.zerosumgames.abstractions.immutable.move.mutation.BoardMutation"
		factory-method="from">
		<constructor-arg>
			<map>
				<entry>
					<key>
						<bean
							class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.position.Position"
							factory-method="from">
							<constructor-arg value="3" />
							<constructor-arg value="3" />
						</bean>
					</key>
					<ref bean="reversiBlackPiece" />
				</entry>

				<entry>
					<key>
						<bean
							class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.position.Position"
							factory-method="from">
							<constructor-arg value="3" />
							<constructor-arg value="4" />
						</bean>
					</key>
					<ref bean="reversiWhitePiece" />
				</entry>

				<entry>
					<key>
						<bean
							class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.position.Position"
							factory-method="from">
							<constructor-arg value="4" />
							<constructor-arg value="3" />
						</bean>
					</key>
					<ref bean="reversiWhitePiece" />
				</entry>

				<entry>
					<key>
						<bean
							class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.cell.position.Position"
							factory-method="from">
							<constructor-arg value="4" />
							<constructor-arg value="4" />
						</bean>
					</key>
					<ref bean="reversiBlackPiece" />
				</entry>
			</map>
		</constructor-arg>

	</bean>

	<!--*********************************************************************************** -->

	<bean id="gamePlay"
		class="fr.designpattern.zerosumgames.abstractions.immutable.context.Context"
		factory-method="from">
		<constructor-arg ref="side" />
		<constructor-arg>
			<bean
				class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.Adversity"
				factory-method="from">
				<constructor-arg>
					<list>
						<bean
							class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.Player"
							factory-method="from">
							<constructor-arg value="Player 2" />
							<constructor-arg>
								<bean
									class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.Strategy">
									<constructor-arg>
										<bean
											class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.evaluation.NullEvaluation" />
									</constructor-arg>
									<constructor-arg>
										<bean
											class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.selection.FirstOnes"></bean>
									</constructor-arg>
								</bean>
							</constructor-arg>
						</bean>
						<bean
							class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.Player"
							factory-method="from">
							<constructor-arg value="Player 1" />
							<constructor-arg>
								<bean
									class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.Strategy">
									<constructor-arg>

										<bean
											class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.evaluation.Evaluation">
											<constructor-arg>
												<bean
													class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.evaluation.exploration.NegaMaxAlphaBetaExploration">
													<constructor-arg value="9"></constructor-arg>
												</bean>
											</constructor-arg>

										</bean>

									</constructor-arg>
									<constructor-arg>
										<bean
											class="fr.designpattern.zerosumgames.abstractions.immutable.context.adversity.player.strategy.selection.FirstOnes"></bean>
									</constructor-arg>
								</bean>
							</constructor-arg>
						</bean>
					</list>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean
				class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.Game"
				factory-method="from">
				<constructor-arg>
					<bean
						class="fr.designpattern.zerosumgames.abstractions.immutable.context.game.board.Board"
						factory-method="from">
						<constructor-arg value="6" />
						<constructor-arg value="6" />
						<constructor-arg ref="reversiNullPiece" />
						<constructor-arg ref="boardSetup" />
					</bean>
				</constructor-arg>
				<constructor-arg>
					<bean
						class="fr.designpattern.zerosumgames.concretisations.reversi.context.referees.ReversiReferee"
						factory-method="from"></bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<!--*********************************************************************************** -->

</beans>